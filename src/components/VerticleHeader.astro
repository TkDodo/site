---
import * as Constants from "@/consts";
import HeaderLink from "./HeaderLink.astro";

function getRandomJSKeyword() {
  const randomIndex = Math.floor(Math.random() * Constants.JS_KEYWORDS.length);
  return Constants.JS_KEYWORDS[randomIndex] ?? "JavaScript";
}
---

<nav class="flex flex-col items-start gap-y-2">
  <a href="/"><h1 class="font-bold text-2xl">{Constants.SITE_TITLE}</h1></a>
  <h2 class="italic text-center">{getRandomJSKeyword()}</h2>
  <div class="py-2"></div>
  <HeaderLink href={Constants.TWITTER_LINK}>Twitter</HeaderLink>
  <HeaderLink href={Constants.GITHUB_LINK}>GitHub</HeaderLink>
  <HeaderLink href={Constants.YOUTUBE_LINK}>YouTube</HeaderLink>
  <HeaderLink href={Constants.LINKEDIN_LINK}>LinkedIn</HeaderLink>
  <HeaderLink href={Constants.EMAIL_LINK}>Email</HeaderLink>
  <HeaderLink href="/rss.xml">RSS</HeaderLink>
</nav>
