const { slug } = Astro.params;
if (!slug) {
  return Astro.redirect("/404");
}
const post = await getEntryBySlug("blog", slug);
if (!post) {
  return Astro.redirect("/404");
}
const { Content } = await post.render();
---

<BlogPost {...post.data}>
  <Content />
</BlogPost>
